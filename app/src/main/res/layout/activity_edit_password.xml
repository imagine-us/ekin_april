<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_primary"
    android:padding="@dimen/dim_tiga">

    <ImageView
        android:id="@+id/btnBackEditPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Password"
        android:textSize="@dimen/txt_empat"
        android:fontFamily="@font/roboto_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginTop="@dimen/dim_empat"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Password Sekarang:"
        android:textSize="@dimen/txt_dua"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_dua"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

    <EditText
        android:id="@+id/edtPassSkrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Password anda sekarang"
        android:textSize="@dimen/txt_dua"
        android:paddingRight="@dimen/dim_dua"
        android:paddingLeft="@dimen/dim_dua"
        app:layout_constraintVertical_bias="0.27"
        android:paddingTop="@dimen/dim_dua"
        android:paddingBottom="@dimen/dim_dua"
        android:textColor="@color/hitam"
        android:textColorHint="@color/grey"
        android:background="@drawable/kotak_lengkung_putih"
        android:inputType="textPassword"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Password Baru:"
        android:textSize="@dimen/txt_dua"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_dua"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.34"
        />

    <EditText
        android:id="@+id/edtPassBaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Password baru anda"
        android:textSize="@dimen/txt_dua"
        android:paddingRight="@dimen/dim_dua"
        android:paddingLeft="@dimen/dim_dua"
        app:layout_constraintVertical_bias="0.41"
        android:paddingTop="@dimen/dim_dua"
        android:paddingBottom="@dimen/dim_dua"
        android:textColor="@color/hitam"
        android:textColorHint="@color/grey"
        android:background="@drawable/kotak_lengkung_putih"
        android:inputType="textPassword"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Konfirmasi Password Baru:"
        android:textSize="@dimen/txt_dua"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_dua"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.48"
        />

    <EditText
        android:id="@+id/edtPassConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Ulangi password baru anda"
        android:textSize="@dimen/txt_dua"
        android:paddingRight="@dimen/dim_dua"
        android:paddingLeft="@dimen/dim_dua"
        app:layout_constraintVertical_bias="0.56"
        android:paddingTop="@dimen/dim_dua"
        android:paddingBottom="@dimen/dim_dua"
        android:textColor="@color/hitam"
        android:textColorHint="@color/grey"
        android:background="@drawable/kotak_lengkung_putih"
        android:inputType="textPassword"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/saveGantiPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtPassConfirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/kotak_lengkung_merah"
        android:textSize="@dimen/txt_dua"
        android:paddingRight="@dimen/dim_empat"
        android:paddingLeft="@dimen/dim_empat"
        android:layout_marginTop="@dimen/dim_tiga"
        android:paddingTop="@dimen/dim_dua"
        android:paddingBottom="@dimen/dim_dua"
        android:text="SIMPAN"
        android:textColor="@color/putih"
        android:textStyle="bold"

        />

</androidx.constraintlayout.widget.ConstraintLayout>