<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kotak_lengkung_hijau"
    android:id="@+id/cardPresensi"
    android:orientation="vertical"
    android:padding="@dimen/dim_tiga">

    <TextView
        android:id="@+id/keteranganPresensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datang"
        android:textColor="@color/putih"
        android:textSize="@dimen/txt_dua"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/datePresensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="04-02-2020"
        android:textColor="@color/putih"
        android:textSize="@dimen/txt_dua"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/timePresensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18:00:00"
        android:textColor="@color/putih"
        android:textSize="@dimen/txt_dua"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textAlignment="center"
        />

</LinearLayout>